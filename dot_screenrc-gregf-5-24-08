setenv LC_CTYPE en_US.UTF-8
defutf8 on

# Set the escape sequence to just a single backtick instead of '^a'. FTFW!
#escape ``
# Control K
escape ^Kk

activity "%"
# Make activity messages yellow on black
sorendition =s Yk
shelltitle 'zsh'
msgwait 2
autodetach            on
crlf                  off
deflogin              off 
hardcopy_append       on

startup_message       off
vbell                 off

defscrollback         10000
silencewait           15

#termcapinfo xterm*|xterms|xs ti@:te=\E[2J
termcap  xterm hs@:cs=\E[%i%d;%dr:im=\E[4h:ei=\E[4l
terminfo xterm hs@:cs=\E[%i%p1%d;%p2%dr:im=\E[4h:ei=\E[4l


# Remove some stupid / dangerous key bindings
bind .
bind ^\
bind \\
bind ^h
bind h

screen -t 'mail' mutt
screen -t 'zsh' zsh

# for launching some of the stuff i use most
bind m screen -t 'mail' 3 mutt
bind v screen -t 'vim' 2 vim
bind i screen -t 'irssi' 1 irssi
bind z screen -t 'zsh' 0 zsh
bind g screen -t 'gila' 4 ssh gila
bind h screen -t 'miker' 5 ssh miker

shell                 zsh

hardstatus on
hardstatus alwayslastline "%{=b kW}[ %{= Y}$USER @ %H %{b W}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{b W}][%{= Y} %m/%d/%y %{Y}%C %{b W}]"

# Double-check to force the focus to irssi after boot
focus
select 0  

# terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# erase background with current bg color
defbce "on" 
# Always start in my home directory
chdir ~ 

